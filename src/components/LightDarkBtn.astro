  const $from = (parentElement, selector) => parentElement.querySelector(selector)
  const $$from = (parentElement, selector) => parentElement.querySelectorAll(selector)
  /* LIGHT DARK MODE */
  const btnLightDarkCheckbox = $('#checkbox-btn-light-dark') 

  // Inicializar con el modo actual del sistema
  if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
