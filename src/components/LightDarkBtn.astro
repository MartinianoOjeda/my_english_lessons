<style>

  /* Button Icon Only */
  .btn-light-dark {
    display: none;
    justify-content: center;
    align-items: center;
    height: 32px;
    width: 32px;
    border-radius: 9999%;
    cursor: pointer;

    &:hover {
      background-color: var(--color-bg-button-icon-only-hover);
    }

    &:active {
      background-color: var(--color-bg-button-icon-only-active);
    }
  }

  #btn-light-dark {
    position: fixed;
    bottom: 4%;
    right: 2%;
    z-index: 11;
    cursor: pointer;
  }

  .checkbox-btn-light-dark{
    display: block;
    opacity: 0;
    color-scheme: light;
    cursor: pointer;
    width: 100% !important;
    height: 100% !important;
  }

  #btn-light-dark-icon-sun {
    display: none;
    position: absolute;
  }

  #btn-light-dark-icon-moon {
    display: block;
    position: absolute;
  }

  #btn-light-dark:has(.checkbox-btn-light-dark:checked) #btn-light-dark-icon-sun {
    display: block;
  }

  #btn-light-dark:has(.checkbox-btn-light-dark:checked) #btn-light-dark-icon-moon {
    display: none;
  }

  .icon-ld {
    width: 32px;
    height: 32px;
  }

  body:has(.checkbox-btn-light-dark) {
    color-scheme: light;
  }

  body:has(.checkbox-btn-light-dark:checked) {
    color-scheme: dark;
  }

  @media (width > 480px) {
  }

  /* DESKTOP */
  @media (width > 1024px) {
    .btn-light-dark {
      display: flex;
    }
  }

</style>

<script is:inline>
  const $ = selector => document.querySelector(selector)
