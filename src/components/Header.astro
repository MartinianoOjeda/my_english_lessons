---
import Menu from "./icons/Menu.astro";
---

<header>
  <nav>
    <ul class='menu'>
      <li class='option'>
        <a href='#'>INICIO</a>
      </li>
    
      <li class='option'>
        <a href='#'>SOBRE NOSOTROS</a>
      </li>
    
      <li class='option dropdown'>
        <a href='#'>PROPUESTAS</a>
        <ul class='submenu'>
          <li class='option'>
            <a href='#'>English For You</a>
          </li>
          <li class='option'>
            <a href='#'>English For Us</a>
          </li>
          <li class='option'>
            <a href='#'>English Emprende</a>
          </li>
          <li class='option'>
            <a href='#'>Recursos</a>
          </li>
        </ul>
      </li>
    
      <li class='option'>
        <a href='#'>CONTACTO</a>
      </li>
    </ul>
  </nav>
  <Menu />
</header>

<style>
  header {
    position:fixed;
    display: flex;
    justify-content: end;
    align-items: center;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--height-header);
    padding-inline: var(--padding-inline-header-mobile);
    backdrop-filter: var(--blur-header);
    background-color: var(--color-bg-header);
    font-weight: var(--font-weight-medium);
    z-index: 10;
  }

  header:has(.show-menu) {
    background-color: var(--color-bg-nav);
  }

  nav {
    position: fixed;
    top: 100%;
    left: 0;
    display: none;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    height: 0;
    width: 100%;
    background-color: var(--color-bg-nav);
    transition: var(--transition-nav);
    & a { opacity: 0; }
  }

  .show-menu {
    display: block;
    height: var(--height-nav-mobile);
 
    & a { opacity:1 ; }
 
    @starting-style {
      height: 0;

      & a { opacity: 0; }
    }

  }

  .menu {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100%;
  }

  .option {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
  }

  .option a {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-option-menu);
    transition: var(--transition-header);
    height: 100%;
    width: 100%;
    &:hover {
      color: var(--color-option-menu-hover);
    }
  }

  .submenu .option a {
    transition: opacity .2s ease;
    opacity: 0;
  }

  .dropdown {
    display: flex;
    flex-direction: row;
    position: relative;

    &:hover .submenu {
      display: flex;
      width: 100%;
      height: 100%;
  
      & .option a { opacity: 1; }
  
    }
  }

  @starting-style {
    .dropdown:hover .submenu { 
      width: 0;
    }

    .dropdown:hover .submenu .option a {
      opacity: 0;
    }
  }

  .submenu {
    display: none;
    flex-direction: column;
    justify-content:center;
    align-items:center;
    width: 0;
    height: 100%;
    padding: 1rem;
    /* background-color: var(--color-bg-nav); */
    transition: width .2s ease, display .2s ease allow-discrete;

    & .option a { opacity: 0; } 
  }

  /* #################### RESPOSIVE #################### */
  /* TABLET */
  @media (width > 480px) {
    header {
      padding-inline: var(--padding-inline-header-tablet);
    }
  }

  /* DESKTOP */
  @media (width > 1024px) {
    header {
      flex-direction: column;
      justify-content: space-around;
      padding-inline: var(--padding-inline-header-desktop);
    }

    nav {
      position: relative;
      display: flex;
      top: 0;
      left: 0;
      background-color: transparent;
      height: 100%;
    }

    .menu {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      height: 100%;
    }
    

    .option a {
      opacity: 1;
    }

    .dropdown {
      flex-direction: column;

      &:hover .submenu {
        display: flex;
        height: 300px;
        width: 100%;
      }
    }

    @starting-style {
      .dropdown:hover .submenu { 
        height: 0%;
        width: 100%;
      }

      .dropdown:hover .submenu .option a {
        opacity: 0;
      }
    }

    .submenu {
      top: 100%;
      position: absolute;
      display: none;
      justify-content:center;
      align-items:center;
      left: 0;
      width: 100%;
      height: 0;
      background-color: var(--color-bg-header);
      transition: height .2s ease, display .2s ease allow-discrete;
      gap: 2rem;
    }
  }

</style>